<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Suntime" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.Suntime.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Suntime.ActionBar</item>
        <item name="actionMenuTextColor">@color/gray</item>
        <item name="android:actionMenuTextColor">@color/gray</item>
        <item name="actionMenuTextAppearance">@style/TextAppearance.Suntime.Widget.ActionBar.Menu</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.Suntime.Widget.ActionBar.Menu</item>
    </style>
    
    <style name="TextAppearance.Suntime.Widget.ActionBar.Menu" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="Widget.Suntime.ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/TextAppearance.Suntime.Widget.ActionBar.Title</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Suntime.Widget.ActionBar.Title</item>
    </style>
    
    <style name="TextAppearance.Suntime.Widget.ActionBar.Title" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20sp</item>
    </style> 
    
    <style name="SightsListHeaderLayout" parent="@style/Theme.Suntime">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@color/gray</item>
    	<item name="android:paddingTop">15dp</item>
    	<item name="android:paddingBottom">15dp</item>
    </style>
    
    <style name="SightsListHeaderLayoutTitle" parent="@style/Theme.Suntime">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_alignParentLeft">true</item>
	    <item name="android:layout_alignParentTop">true</item>
    </style>
    
     <style name="SightsListHeaderLayoutSubTitle" parent="@style/Theme.Suntime">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_alignParentRight">true</item>
	    <item name="android:layout_alignParentTop">true</item>
    </style>
    
    <style name="SightsListRootRowLayout" parent="@style/AppTheme">
        <item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:orientation">horizontal</item>
    	<item name="android:padding">30dp</item>
    </style>
    
    <style name="MapInfoWindowRootLayout" parent="@style/Theme.Suntime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
    </style>
    
    <style name="SightsListPhotoRowLayout" parent="@style/AppTheme">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="SightsListContentRowLayout" parent="@style/AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">100</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="SightsListCityOpinionRowLayout" parent="@style/AppTheme">
         <item name="android:layout_width">fill_parent</item>
         <item name="android:layout_height">30dp</item>
         <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="SightsListOrder" parent="@style/AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="SightsListPhoto" parent="@style/AppTheme">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <!--  
        <item name="android:layout_marginLeft">4sp</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:layout_marginTop">4sp</item>
        -->
        <item name="android:src">@drawable/ic_launcher</item>
    </style>
    
    <style name="SightsListRating" parent="@style/AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="SightsListTitle" parent="@style/AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="SightsListCity" parent="@style/AppTheme">
