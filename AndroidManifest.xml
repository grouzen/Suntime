        </activity>
        <activity
            android:name=".SightsGridActivity"
            android:label="@string/title_activity_sights_grid" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
